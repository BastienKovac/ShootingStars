<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="network.iut.org.shootingstars">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="Shooting Stars"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar.FullScreen">
        <activity
            android:name=".game.menu.GameMenu"
            android:label="@string/title_activity_game_menu"
            android:noHistory="true"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".game.GameActivity"
            android:noHistory="true"
            android:screenOrientation="portrait" />
        <activity android:name=".game.menu.OptionsActivity" />
        <activity
            android:name=".game.menu.CreditsActivity"
            android:label="@string/title_activity_credits" />
        <activity
            android:name=".game.menu.ScoreActivity"
            android:label="@string/title_activity_score"></activity>
    </application>

</manifest>