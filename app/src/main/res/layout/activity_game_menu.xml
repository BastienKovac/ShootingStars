<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/layer_0">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/linearLayout"
        android:weightSum="1"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true">


        <Button
            android:id="@+id/btnLvl1"
            android:clickable="true"
            android:onClick="btnEasyMode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:padding="10dp"
            android:text="Easy Mode"
            android:textScaleX="2"
            android:background="#facd2e"
            android:textColor="#FFFFFF"
            android:layout_weight="0.2" />

        <Button
            android:id="@+id/btnLvl2"
            android:clickable="true"
            android:onClick="btnHardMode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:padding="10dp"
            android:text="Hard Mode"
            android:textScaleX="2"
            android:background="#fbb600"
            android:textColor="#FFFFFF"
            android:layout_weight="0.2"/>

        <Button
            android:id="@+id/btnLvl3"
            android:clickable="true"
            android:onClick="btnImpMode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:padding="10dp"
            android:text="Imposible Mode"
            android:textScaleX="2"
            android:background="#fa8100"
            android:textColor="#FFFFFF"
            android:layout_weight="0.2" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2"
            >
            <Button
                android:id="@+id/btnoptions"
                android:clickable="true"
                android:onClick="btnOptions"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:padding="10dp"
                android:text="Options"
                android:textScaleX="2"
                android:background="#0162a0"
                android:textColor="#FFFFFF"
                android:layout_weight="1"/>


            <Button
                android:id="@+id/btncredits"
                android:clickable="true"
                android:onClick="btnCredits"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:padding="10dp"
                android:text="Credits"
                android:textScaleX="2"
                android:background="#0162a0"
                android:textColor="#FFFFFF"
                android:layout_weight="1"/>
        </LinearLayout>

        <Button
            android:id="@+id/btnScore"
            android:clickable="true"
            android:onClick="btnScore"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:padding="10dp"
            android:text="Hall of Fame"
            android:textScaleX="2"
            android:background="#2b3b9f"
            android:textColor="#FFFFFF"
            android:layout_weight="0.2" />

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/menu_title"
        android:padding="2dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/linearLayout"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true">
    </LinearLayout>
</RelativeLayout>
